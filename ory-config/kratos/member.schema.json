{
  "$id": "member.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Member",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "name": {
          "type": "object",
          "required": ["first", "last"],
          "properties": {
            "first": {
              "title": "First Name",
              "type": "string"
            },
            "last": {
              "title": "Last Name",
              "type": "string"
            }
          }
        },
        "postal_address": {
          "type": "object",
          "required": ["street", "postal_code", "city"],
          "properties": {
            "street": {
              "title": "Street",
              "type": "string"
            },
            "postal_code": {
              "title": "Street",
              "type": "string"
            },
            "city": {
              "title": "City",
              "type": "string"
            }
          }
        },
        "municipality": {
          "title": "Municipality",
          "type": "string"
        },
        "country": {
          "title": "Country",
          "type": "string"
        },
        "phone": {
          "type": "string",
          "format": "tel",
          "title": "Phone number",
          "minLength": 6,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            }
          }
        },
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 5,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "gender": {
          "title": "Gender",
          "type": "string",
          "pattern": "(^fe|^)male$|^other$|^unknown$"
        },
        "birthday": {
          "title": "Birthday",
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "country",
        "email",
        "municipality",
        "gender",
        "birthday"
      ],
      "additionalProperties": false
    }
  }
}
